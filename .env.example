# Rocket.Chat Cluster Configuration

# General Settings
ROOT_URL=http://localhost
# For production: ROOT_URL=https://your-domain.com

# MongoDB Settings
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=rocketchat123
MONGO_DATABASE=rocketchat

# Rocket.Chat Settings
ROCKETCHAT_REPLICAS=3
REGISTER_SERVER=false

# Redis Settings (for session sharing)
REDIS_PASSWORD=redis123

# Email Settings (optional)
MAIL_URL=smtp://smtp.email:587
MAIL_FROM=noreply@yourdomain.com

# File Upload Settings
FILE_UPLOAD_MAX_FILE_SIZE=104857600  # 100MB in bytes

# Performance Settings
INSTANCE_IP=0.0.0.0
DISABLE_PRESENCE_MONITOR=true  # Disable for better performance in large deployments

# Security Settings
IFRAME_INTEGRATION_SEND_ENABLE=false
IFRAME_INTEGRATION_RECEIVE_ENABLE=false

# Federation (optional)
FEDERATION_ENABLED=false

# Push Notifications (optional)
PUSH_ENABLE=false
PUSH_GATEWAY=https://gateway.rocket.chat

# Logging
LOG_LEVEL=error
LOG_FILE=/var/log/rocketchat.log

# Development Settings
NODE_ENV=production
# For development: NODE_ENV=development